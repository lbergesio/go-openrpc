{{- $components := (.Components) }}
{{printf .Info.Title}}
===
{{printf .Info.Description}}

<strong>Version {{.Info.Version}}</strong>

---
{{- range .Messages }}
{{ printf "- [%s](#%s)" .Name .Name }}
{{- end }}
---


{{- range .Messages }}
{{ printf "<a name=\"%s\"></a>" .Name }}
{{- $messageName := (.Name) }}
{{ printf "## %s" .Name }}

{{ printf .Summary }}

{{ printf "### Description" }}
{{ printf (sanitizeNewLines .Description false) }}

{{- if .Params }}
{{ printf "### Parameters" }}
{{ printf "| Name | Type | Constraints | Description |" }}
{{ printf "| --- | --- | --- | --- |" }}
{{- range .Params }}
{{ printf (getNestedParams $components .) }}
{{- end }}
{{- end }}

{{- if .Result }}
{{ printf "### Result" }}
{{ printf "| Name | Type | Constraints | Description |" }}
{{ printf "| --- | --- | --- | --- |" }}
{{ printf (getNestedParams $components .Result) }}
{{- end }}

{{- if .Errors }}
{{ printf "### Errors" }}
{{ printf "| Code | Message | Description |" }}
{{ printf "| --- | --- | --- |" }}
{{- range .Errors }}
{{ printf "| %d | %s | %s |" .Code .Message .Data.String }}
{{- end }}
{{- end }}

{{- if .Examples }}
### Examples

{{- range .Examples }}
{{ printf "#### %s" .Name }}
{{ printf "%s" .Description }}

#### Request

{{ printf "```json" }}
{{ printf "%s" (messageExampleRequestAsJSONPretty $messageName .) }}
{{ printf "```" }}

#### Response

{{ printf "```json" }}
{{ printf "%s" (messageExampleResponseAsJSONPretty $messageName .) }}
{{ printf "```" }}
{{- end }}

{{- end }}

{{- end }}
